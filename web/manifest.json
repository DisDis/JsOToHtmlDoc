{
  "manifest_version": 2,

  "name": "Test",
  "description": "Test",
  "default_locale": "en",
  "version": "0.1",
  
  "permissions": [
    "https://*/",
    "http://*/",
    "identity",
    "storage",
    "tabs",
    "activeTab",
    "identity",
    "background"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  
  "browser_action": {
    "default_popup": "page1.html"
  },

  "background": {
    "persistent": false,
    "page": "background.html"
  }
}